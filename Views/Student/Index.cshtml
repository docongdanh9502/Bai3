@{
    ViewData["Title"] = "Trang Đăng Ký Chuyên Ngành";
}

<h2 class="text-center" style="margin-bottom: 30px;">Trang Đăng Ký Chuyên Ngành</h2>

<!-- Form Đăng Ký Chuyên Ngành -->
<form method="post" asp-action="ShowKQ" class="registration-form">
    <div class="form-group">
        <label for="mssv">MSSV:</label>
        <input type="text" id="mssv" name="mssv" required class="form-control" placeholder="Nhập MSSV" />
    </div>

    <div class="form-group">
        <label for="hoten">Họ Tên:</label>
        <input type="text" id="hoten" name="hoten" required class="form-control" placeholder="Nhập Họ và Tên" />
    </div>

    <div class="form-group">
        <label for="diemTB">Điểm TB:</label>
        <input type="number" id="diemTB" name="diemTB" required step="0.01" class="form-control" placeholder="Nhập Điểm Trung Bình" />
    </div>

    <div class="form-group">
        <label for="chuyennganh">Chuyên Ngành:</label>
        <select id="chuyennganh" name="chuyennganh" class="form-control">
            <option value="CNPM">CNPM</option>
            <option value="HTTT">HTTT</option>
            <option value="ANM">ANM</option>
            <option value="TTNT">TTNT</option>
            <option value="MMT">MMT</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Đăng Ký</button>
</form>

<style>
    /* Thêm style cho form */
    .registration-form {
        max-width: 500px;
        margin: 0 auto;
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .btn {
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    h2 {
        color: #343a40;
        font-size: 30px;
    }

    label {
        font-weight: bold;
        color: #495057;
    }
</style>
